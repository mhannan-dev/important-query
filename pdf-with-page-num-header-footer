demo_pdf.blade.php and package  "barryvdh/laravel-dompdf": "^2.0",

<!DOCTYPE html>
<html>

<head>
    <style>
        /* Define your styles for the header and footer here */
        .header {
            text-align: center;
            padding: 10px;
            background-color: #f2f2f2;
        }

        .footer {
            text-align: center;
            padding: 10px;
            background-color: #f2f2f2;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>

<body>
    <div class="header">
        <h1>Your PDF Header</h1>
    </div>

    <div class="content">
        {{ $content }}
    </div>
    <div class="footer">
        Hello
        <script type="text/php">
            if ( isset($pdf) ) { 
                $font = $fontMetrics->get_font("Arial, Helvetica, sans-serif", "normal", 12);
                $size = 12;
                $pageText = "Page " . $PAGE_NUM . " of " . $PAGE_COUNT;
                $y = 15;
                $x = 520;
                $pdf->text($x, $y, $pageText, $font, $size);
            }
        </script>
    </div>
</body>
</html>
